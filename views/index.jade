extends layout

block content
  script(type="text/x-handlebars", data-template-name="todos")
    section#todoapp
      header#header
        h1 todos
        input#new-todo(type="text", placeholder="What needs to be done?")
      section#main
        ul#todo-list
          {{#each todo in model}}
          li
            input.toggle(type="checkbox")
            label {{todo.title}}
            button.destroy
          {{/each}}
      footer#footer
        span#todo-count
          strong 2
          |  todos left
        ul#filters
          li
            a(href="all", class="selected") All
          li
            a(href="active") Active
          li
            a(href="completed") Completed
        button#clear-completed
          Clear completed (1)
    footer#info
      p Double-click to edit a todo
